
@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Giris</title>
    <style>

        h2 {
            margin-top: 1em;
            margin-bottom: 1em;
            color: #5cb85c;
            font-weight: 400;
            text-align: center;
            font-size: 200%;
            letter-spacing: 4px;
        }

        h4 {
            margin-top: 1em;
            color: #eee;
            font-size: 150%;
            font-weight: 300;
            text-align: center;
        }

        button {
            display: inline;
            background: #01A4E0;
            color: #2184AC;
            border: 0;
            padding: 4px;
        }

        input {
            display: block;
            width: 98%;
            height: 30px;
            margin-top: 1.0em;
            padding: 4px;
        }


        .login-box {
            padding: 1em 0 2em 0;
            margin: auto;
            text-align: center;
            display: block;
            background-color: #333;
            /*border: 1px dashed white;*/
            width: 75%;
            height: auto;
        }


        .outer-box {
            display: block;
            margin: auto;
            background: #333;
            border-radius: 5px;
            width: 30%;
            height: 17.5em;
            height: auto;
        }

        #btn-login {
            display: block;
            width: 100%;
            height: 40px;
            margin-top: 2.0em;
            border-radius: 4px;
            background-color: #4CAF50;
            color: #fff;
        }

        #btn-forgot {
            display: block;
            width: 100%;
            margin-top: 1.0em;
            border-radius: 2px;
            color: #fff;
            background-color: #000D36;
        }
    </style>
    
</head>
<body>
    @using (Html.BeginForm("Giris", "KayitGiris", FormMethod.Post))
    {
        <h2>Giriş Yap</h2>
        <div class="outer-box">
            <div class="login-box">
                <h4 class="login-text">Giriş</h4>
                <center>

                    
                    <input name="IdentityNumber" placeholder="TC">
                    <input name="password" placeholder="Şifre">


                    <a href="/Home/"> <button id="btn-login">Giriş Yap</button></a>


                </center>
            </div>
        </div>
    }
    <div>
    </div>
</body>
</html>
